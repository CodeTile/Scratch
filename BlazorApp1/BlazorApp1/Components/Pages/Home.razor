@page "/"
@using BlazorApp1.Components.Shared.Select

<h3>Multi-Select Combo with Expandable Dropdown</h3>

<MultiSelectCombo TItem="string"
                  Items="@options"
                  SelectedValues="@selectedOptions"
                  SelectedValuesChanged="@OnSelectionChanged"
                  Placeholder="Choose your options:" />

<p>You selected:</p>
<ul>
    @foreach (var val in selectedOptions)
    {
        <li>@val</li>
    }
</ul>

@code {
    private List<string> options = new() { "Option A", "Option B", "Option C", "Option D" };
    private List<string> selectedOptions = new();

    private void OnSelectionChanged(List<string> newSelection)
    {
        selectedOptions = newSelection;
    }
}

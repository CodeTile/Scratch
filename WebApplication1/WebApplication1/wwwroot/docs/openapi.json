{
  "openapi": "3.1.0",
  "info": {
    "title": "AdventureWorks API",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "https://api.example.com/v1" }
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "List products",
        "description": "Retrieves a list of products from the AdventureWorks database using JSON format endpoints.",
        "responses": {
          "200": {
            "description": "A list of products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Product" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new product",
        "description": "Creates a new product record via JSON-based endpoint.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ProductCreate" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Product created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Product" }
              }
            }
          }
        }
      }
    },
    "/products/{productId}": {
      "get": {
        "summary": "Get a product by ID",
        "description": "Retrieves a single product by ID using JSON endpoint conventions.",
        "parameters": [
          {
            "in": "path",
            "name": "productId",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Product details",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Product" }
              }
            }
          },
          "404": { "description": "Product not found" }
        }
      },
      "put": {
        "summary": "Update a product",
        "description": "Updates an existing product using JSON-based update operations.",
        "parameters": [
          {
            "in": "path",
            "name": "productId",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ProductUpdate" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Product updated",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Product" }
              }
            }
          },
          "404": { "description": "Product not found" }
        }
      },
      "delete": {
        "summary": "Delete a product",
        "description": "Deletes a specified product using JSON-based service operations.",
        "parameters": [
          {
            "in": "path",
            "name": "productId",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "204": { "description": "Product deleted" },
          "404": { "description": "Product not found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "ProductID": { "type": "integer" },
          "Name": { "type": "string" },
          "ProductNumber": { "type": "string" },
          "Color": { "type": "string", "nullable": true },
          "StandardCost": { "type": "number" },
          "ListPrice": { "type": "number" },
          "Size": { "type": "string", "nullable": true }
        }
      },
      "ProductCreate": {
        "type": "object",
        "required": ["Name", "ProductNumber", "StandardCost", "ListPrice"],
        "properties": {
          "Name": { "type": "string" },
          "ProductNumber": { "type": "string" },
          "Color": { "type": "string", "nullable": true },
          "StandardCost": { "type": "number" },
          "ListPrice": { "type": "number" },
          "Size": { "type": "string", "nullable": true }
        }
      },
      "ProductUpdate": {
        "type": "object",
        "properties": {
          "Name": { "type": "string" },
          "ProductNumber": { "type": "string" },
          "Color": { "type": "string", "nullable": true },
          "StandardCost": { "type": "number" },
          "ListPrice": { "type": "number" },
          "Size": { "type": "string", "nullable": true }
        }
      }
    }
  }
}